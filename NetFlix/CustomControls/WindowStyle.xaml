<UserControl x:Class="NetFlix.CustomControls.WindowStyle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NetFlix.CustomControls"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             mc:Ignorable="d" 
             >
    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
        <fa:IconImage Icon="WindowMaximize" Style="{StaticResource WindowStyleButton}"/>
        <fa:IconImage Icon="WindowMinimize" Style="{StaticResource WindowStyleButton}"/>
        <fa:IconImage Icon="WindowClose" Style="{StaticResource WindowStyleButton}"/>
    </StackPanel> 
</UserControl>
