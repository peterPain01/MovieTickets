<UserControl x:Class="NetFlix.CustomControls.WindowStyle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NetFlix.CustomControls"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             mc:Ignorable="d" 
             >
    <DockPanel Background="#202020">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <fa:IconImage Icon="Subtract"
                          Width="16"
                          Margin="0,0,20,0"
                          Foreground="#c0c0c0"
                          Style="{StaticResource WindowStyleButton}"
                          Cursor="Hand"
                          MouseDown="IconImage_MouseDown_1"
                          />

            <fa:IconImage Icon="X" Foreground="#c0c0c0" Style="{StaticResource WindowStyleButton}"
                          Width="20" Height="20"
                          Cursor="Hand"
                          MouseDown="IconImage_MouseDown"
                          />
        </StackPanel>
    </DockPanel> 
</UserControl>
