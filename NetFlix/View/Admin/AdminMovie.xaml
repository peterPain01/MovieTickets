<UserControl x:Class="NetFlix.View.Admin.AdminMovie"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NetFlix.View.Admin"
             mc:Ignorable="d" 
              d:DesignHeight="450" d:DesignWidth="1000">
    <Border CornerRadius="0 10 10 0" >
        <Border.Background>
            <SolidColorBrush Color="#f6f7fb"/>
        </Border.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="200"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!--Them xoa sua--> 
            <TextBlock FontSize="26" Foreground="Black" Margin="50 35 0 20" Text="Movie Config" HorizontalAlignment="Left"/>
            <StackPanel Orientation="Vertical">
                <Button Content="Add Movie" Command="{Binding OpenAddMovieForm}"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
